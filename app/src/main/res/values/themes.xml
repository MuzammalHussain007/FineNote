 <resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FineNote" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_900</item>
        <item name="colorPrimaryVariant">@color/dark_purple_A400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/dark_purple_A400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/amber_50</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="colorControlNormal">@color/amber_500</item>
        <item name="colorControlActivated">@color/amber_700</item>
    </style>
</resources>